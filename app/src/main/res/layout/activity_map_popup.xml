<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B22222"
    android:orientation="vertical">

    <Button
        android:id="@+id/to_map_button"
        android:layout_width="159dp"
        android:layout_height="69dp"
        android:contentDescription="@string/go_to_simpson_college_campus_map"
        android:onClick="click_GoToMap"
        android:text="@string/go_to_map"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.688" />

    <Button
        android:id="@+id/to_main_button"
        android:layout_width="159dp"
        android:layout_height="69dp"
        android:contentDescription="@string/go_back_to_main_page"
        android:onClick="click_BackToMain"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.851" />

    <TextView
        android:id="@+id/popup_message"
        android:layout_width="287dp"
        android:layout_height="252dp"
        android:gravity="center"
        android:text="@string/do_you_want_to_look_at_a_map_of_simpson_college"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#F8FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        app:fontFamily="casual"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.338" />
</androidx.constraintlayout.widget.ConstraintLayout>