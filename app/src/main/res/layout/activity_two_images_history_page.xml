<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"

    tools:layout_editor_absoluteY="8dp"
    tools:layout_editor_absoluteX="8dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingBottom="50dp"
        tools:context="com.simpsonhistory.simpsonhistoryapplication.HistoryActivity">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"


            android:textAppearance="@style/TextAppearance.AppCompat.Large" />


        <TextView
            android:id="@+id/author"
            android:textColor="@android:color/black"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center" />
        <ImageView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="284dp"
            android:contentDescription="TODO" />


        <TextView
            android:id="@+id/history1"
            android:layout_width="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="284dp"
            android:contentDescription="TODO" />


        <TextView
            android:id="@+id/history2"
            android:layout_width="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/infoToLink"
            android:textColor="@android:color/black"
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/for_more_information_visit" />
        <TextView
            android:id="@+id/link"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:autoLink="web"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/simpsonIowaHistoryImage"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/iowa_history_center" />



    </LinearLayout>
</ScrollView>
