<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#931A29"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="172dp"
        app:layout_constraintBottom_toTopOf="@+id/map_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.16"
        app:srcCompat="@drawable/simpson_college_logo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/map_button"
        android:layout_width="97dp"
        android:layout_height="94dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="272dp"
        android:clickable="true"
        android:contentDescription="@string/map_button"
        android:focusable="true"
        android:onClick="click_Map"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.228"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_dialog_map" />

    <ImageView
        android:id="@+id/info_button"
        android:layout_width="88dp"
        android:layout_height="93dp"
        android:layout_marginTop="396dp"
        android:layout_marginEnd="10dp"
        android:clickable="true"
        android:contentDescription="@string/info_button"
        android:focusable="true"
        android:onClick="changeViewInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.256"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_dialog_info" />

    <ImageView
        android:id="@+id/help_button"
        android:layout_width="110dp"
        android:layout_height="105dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="390dp"
        android:clickable="true"
        android:contentDescription="@string/help_button"
        android:focusable="true"
        android:onClick="changeViewHelp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/info_button"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_help_black_24dp" />

    <ImageView
        android:id="@+id/list_button"
        android:layout_width="129dp"
        android:layout_height="112dp"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="272dp"
        android:clickable="true"
        android:contentDescription="@string/list_button"
        android:focusable="true"
        android:onClick="changeViewList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/map_button"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_view_list_black_24dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/iowa_history_center" />


</androidx.constraintlayout.widget.ConstraintLayout>